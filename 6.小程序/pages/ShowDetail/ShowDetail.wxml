<view class="MessageDetailPage">
  <view class="MessageDetailContainer">
    <image  src="{{Message.img}}"mode="widthFix" class="messageImage"></image>
    <img src="{{imageDeriction}}" class="messageImage"/>
    
    <view class="titleContainer">
      <image class="Icon" src="/image/DecorationIcon/title.png"></image>
      <text class="titleText">{{Message.title}}</text>
      <img class="titleIcon" src="{{titleIconDeriction}}"/>
      <text class="titleText">{{title}}</text>
    </view>
    
    <view class="messageContainer">
      <text class="message">{{Message.content}}</text>
      <text class="username">{{Message.nickname}}</text>
      <view class="Date">
        <image class="Icon" src="/image/DecorationIcon/date.png"></image>
        <text class="date">{{Message.date}}</text>
      </view>
    </view>


    
    <view wx:key wx:for="{{commentList}}" wx:for-item="item" class="commentContainer">
      <text class="commentNickname">{{item.nickname}}:</text>
      <view class='CommentAndDate'>
         <text class="commentDetail">{{item.content}}</text>
         <text class="commentDate">{{item.date}}</text>
      </view>
    </view>
    <view class="borderView">
    </view>
  
  
    <view class="inputBox">
      <text>说点什么:</text>
      <view>
       <textarea placeholder='想回复些什么吗' focus="{{focustext}}" bindtap='changeFocus'
        bindinput='changeValue' class="input"></textarea>
      </view>
    </view>

    <button class="sendButton" bindtap='HUIFU'> 发送 </button>

  </view>
</view>