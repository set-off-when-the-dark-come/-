.ChooseImage{
  display: flex;
  justify-content: center;
  margin: auto;
  width: 95%;
  height: 40vh;
  background-color: #e2e2e2;
  margin-bottom: 50rpx;
}
.centerCameraIcon{
  width: 10vh;
  margin: auto;
}
.TitleAndContent{
  height: 45vh;
  margin: auto;
  width: 95%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.Title{
  display: flex;
  align-items: center;
  height: 36rpx;
  font-size: 36rpx;
}
.Icon{
  width: 36rpx;
  height: 36rpx;
}
.TitleInput{
  
}


.ContentInput{
  font-size:36rpx;
  font-weight: lighter;
  min-height: 300rpx;
}
.ContentPlaceholder{
  min-height: 300rpx;
  font-weight: lighter;
  background-color: #e2e2e2;
}

.CompleteButton{
  margin-right: 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #05cebd;
  border-radius: 40rpx;
  width: 185rpx;
  height: 80rpx;
  box-shadow: 10rpx 5rpx 10rpx #9a9ea7
}
.CompleteButton image{
  width: 35rpx;
  height: 35rpx;
}
.CompleteButton text{
  font-size: 28rpx;
  color: #fff;
}
